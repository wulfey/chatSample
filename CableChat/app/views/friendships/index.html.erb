<p id="notice"><%= notice %></p>

<h1>Friendships for user #<%=current_user.id%>, email: <%= current_user.email %></h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Friend</th>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <% if friendship.user_id == current_user.id && friendship.friend_id != current_user.id %>
        <tr>
          <td><%= User.find(friendship.friend_id).email %></td>
          <td><%= link_to 'Remove', friendship, method: :delete %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<a href="#"><%= link_to('Users', users_path, class: 'btn btn-xs btn-danger', title: 'Users')%></a>
