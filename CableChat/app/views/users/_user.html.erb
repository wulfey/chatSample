<div class="card">
  <div class="card-block">
    <div class="row">

      <div class="col-md-1">
        <%= gravatar_for user %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <li>
            <%= user.id  %>
          </li>
          <li>
            <%= user.email  %>
          </li>
          <li>


            <% if current_user.friendships.find_by(friend_id: user.id) != nil %>
              <%= link_to 'Remove', friendship_path(current_user.friendships.find_by(friend_id: user.id)), method: :delete %>
            <% else %>
              <%= link_to "Add Friend", friendships_path(:friend_id => user.id), :method => :post %>
            <% end %>

          </li>





        </p>
      </div>

    </div>
  </div>
</div>
